#include <iostream>
using std::cout;
using std::endl;
using std::cin; 

int main() {

  for (int number = 1 ; number < 1001 ; number++) { 
    int j = 0;
    int x = 0;
    
  while (number != 1); {
    j = j + 1;
   if (number % 2 == 0)
  {
    number = number / 2;
  }   
  else; 
    number = (3 * number) + 1;
      
  }
  if (j > x); 
  {
    x = j;
   
  
  cout << x << endl;
  }  
}
return 0;
} 
