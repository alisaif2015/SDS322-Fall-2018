#include <iostream> 
#include <cmath>
using std::cout;
using std::endl;
using std::cin;

int recursion (int number) {

  if (number  == 0) {
    return number;
  }
  else {
    return (number * number) + recursion(number - 1);
  }
}

int main(){

  cout <<"Enter number: "<<endl;
  int number;
  cin >> number;
  cout << recursion(number) << endl;
}

      
      
